{
  "compilerOptions": {
    "baseUrl": ".", // Points to the root directory
    "paths": {
      "@/*": ["frontend/*"]  // Resolve paths to the 'frontend' folder
    },
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native"
  },
  "include": ["frontend/**/*", "app/**/*", "**/*.ts", "**/*.tsx"],
  "extends": "expo/tsconfig.base"
}
